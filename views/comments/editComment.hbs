<form action="/trails/{{trailId}}/comments/{{comment._id}}?_method=PUT" method="post">

    <div class="form-div">

        <div class="form-group">
            <label for="comment">Update Comment:</label>
            <input type="text" name="comment" id="comment" value="{{comment.comment}}">
            </br>
            <div class="trail-buttons">

                <button class="btn btn-primary" type="submit">Save Comment</button>

            </div>
        </div>
    </div>
</form>