<form method="POST" action="/trails/{{trail._id}}?_method=PUT" >

<label for="trailName">Trail Name:</label>
<input type="text" name="trailName" id="trailName" value="{{trail.trailName}}">

<label for="distance">Distance:</label>
<input type="text" name="distance" id="distance" value="{{trail.distance}}">

<label for="difficulty">Difficulty:</label>
<input type="text" name="difficulty" id="difficulty" value="{{trail.difficulty}}">
 
<label for="rating">Rating:</label>
<input type="text" name="rating" id="rating" value="{{trail.rating}}">

<label for="description">Description:</label>
<input type="text" name="description" id="description" value="{{trail.description}}">

<label for="imgLink">Link to Image:</label>
<input type="text" name="imgLink" id="imgLink" value="{{trail.imgLink}}">


<input type="submit" value="Update Trail">







</form>